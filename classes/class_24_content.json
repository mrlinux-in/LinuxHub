        {
          "type": "heading",
          "value": "Quick Quiz"
        },
        {
          "type": "quiz",
          "question": "Where is file metadata stored?",
          "options": ["A: Data blocks", "B: Directory entry", "C: Inode", "D: Filename"],
          "correctAnswer": 2
        },
        {
          "type": "quiz",
          "question": "Which type of link breaks if the original file is deleted?",
          "options": ["A: Hard link", "B: Symbolic link", "C: Both", "D: Neither"],
          "correctAnswer": 1
        },
        {
          "type": "quiz",
          "question": "Which command creates a symbolic link?",
          "options": ["A: ln file.txt link", "B: ln -s file.txt link", "C: link file.txt", "D: symlink file.txt"],
          "correctAnswer": 1
        },
        {
          "type": "tip",
          "value": "If a symlink breaks, it becomes a 'dangling link' — pointing to nothing."
        }
      ],
