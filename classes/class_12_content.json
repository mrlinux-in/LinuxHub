        },
        {
          "type": "quiz",
          "question": "Which symbol is used to connect two commands?",
          "options": ["A: /", "B: |", "C: ->", "D: =="],
          "correctAnswer": 1
        },
        {
          "type": "quiz",
          "question": "Which tool is best for replacing text?",
          "options": ["A: awk", "B: sed", "C: sort", "D: grep"],
          "correctAnswer": 1
        },
        {
          "type": "quiz",
          "question": "Which command finds patterns inside text?",
          "options": ["A: grep", "B: sort", "C: echo", "D: man"],
          "correctAnswer": 0
        },
        {
          "type": "tip",
          "value": "Pipes = combine commands | Filters = change or clean the data"
        }
